{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@app/components/*": [
        "./src/app/components/*"
      ],
      "@app/lib/*": [
        "./src/app/lib/*"
      ],
      "@main/*": [
        "./src/main/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
